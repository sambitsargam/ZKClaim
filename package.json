{
  "name": "zkclaim",
  "version": "1.0.0",
  "description": "Privacy-preserving health insurance claim system using zkVerify.io on Horizen Testnet",
  "main": "index.js",
  "scripts": {
    "setup-circuits": "./scripts/setup-circuits.sh",
    "validate": "./scripts/validate-setup.sh",
    "zkverify-flow": "node scripts/zkverifyFlow.js",
    "backend": "cd backend && npm start",
    "frontend": "cd frontend && npm start",
    "deploy-horizen": "npx hardhat run deploy/deployHorizen.js --network horizenTestnet",
    "compile-contracts": "npx hardhat compile",
    "test": "mocha test/**/*.test.js --timeout 120000",
    "test-circuits": "mocha test/doctor.test.js test/patient.test.js --timeout 60000",
    "test-integration": "mocha test/integration.test.js --timeout 120000",
    "install-all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "start": "npm run backend",
    "dev": "concurrently \"npm run backend\" \"npm run frontend\"",
    "build": "cd frontend && npm run build",
    "clean": "rm -rf build/doctor build/patient build/*.ptau node_modules backend/node_modules frontend/node_modules"
  },
  "dependencies": {
    "snarkjs": "^0.7.3",
    "circomlib": "^2.0.5",
    "axios": "^1.6.0",
    "dotenv": "^16.3.1",
    "ethers": "^6.14.0"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "hardhat": "^2.19.0",
    "mocha": "^10.2.0",
    "chai": "^4.3.8",
    "sinon": "^17.0.1",
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sambitsargam/ZKClaim.git"
  },
  "keywords": [
    "zero-knowledge",
    "zkverify",
    "health-insurance",
    "privacy",
    "blockchain",
    "groth16",
    "circom",
    "snarkjs",
    "horizen",
    "base-sepolia"
  ],
  "author": "ZKClaim Team",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sambitsargam/ZKClaim/issues"
  },
  "homepage": "https://github.com/sambitsargam/ZKClaim#readme"
}
